<%= simple_form_for @movie do |f| %>

  <%# Use select_tag to display dropdown of categories list populated in the controller %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select Category") %>
  <%= f.file_field :movie_img %>
  <%= f.input :title, label: "Movie's Name" %>
  <%= f.input :description %>
  <%= f.input :director, label: "Director's Name" %>
  <%= f.input :release_date, start_year: Date.today.year - 90,
                              end_year: Date.today.year + 2,
                              order: [:day, :month, :year] %>
  <%= f.button :submit %>
<% end %>